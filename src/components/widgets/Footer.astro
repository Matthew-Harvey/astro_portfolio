---
import { Icon } from 'astro-icon';
import { getHomePermalink } from '~/utils/permalinks';
import Logo from '../atoms/Logo.astro';
import ToggleTheme from '../core/ToggleTheme.astro';
---

<footer class="border-t border-gray-200 dark:border-slate-800">
	<div class="max-w-6xl mx-auto px-4 sm:px-6">
		<div class="grid grid-cols-6 gap-4 gap-y-8 sm:gap-8 py-8 md:py-12">
			<div class="mb-2">
				<a class="inline-block font-bold text-xl" href={getHomePermalink()}><Logo /></a>
			</div>
			<div class="text-gray-800 dark:text-gray-300 font-medium mb-2">
				<a href="/">Home</a>
				<ul class="text-sm py-2">
					<li class="mb-2">
						<a class="text-gray-600 hover:text-gray-700 dark:text-gray-400 transition duration-150 ease-in-out"
							href="https://mharvey.vercel.app/#skills"
							>Skills</a
						>
					</li>
					<li class="mb-2">
						<a class="text-gray-600 hover:text-gray-700 dark:text-gray-400 transition duration-150 ease-in-out"
							href="https://mharvey.vercel.app/#history"
							>History</a
						>
					</li>
					<li class="mb-2">
						<a class="text-gray-600 hover:text-gray-700 dark:text-gray-400 transition duration-150 ease-in-out"
							href="https://mharvey.vercel.app/#projects"
							>Projects</a
						>
					</li>
				</ul>
			</div>
			<div class="text-gray-800 dark:text-gray-300 font-medium mb-2"><a href="https://mharvey.vercel.app/blog">Blog</a></div>
			<div class="text-gray-800 dark:text-gray-300 font-medium mb-2"><a href="https://mharvey.vercel.app/#contact">Contact</a></div>
			<div class="text-gray-800 dark:text-gray-300 font-medium mb-1">
				<ul class="text-sm py-1 columns-3">
					<li class="mb-1">
						<a
							class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
							aria-label="Linkedin"
							href="https://www.linkedin.com/in/m-harvey/" target="_blank"
						>
							<Icon name="tabler:brand-linkedin" class="w-5 h-5" />
						</a>
					</li>
					<li class="mb-1">
						<a
							class="inline-block text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5"
							aria-label="Github"
							href="https://github.com/matthew-harvey/" target="_blank"
						>
							<Icon name="tabler:brand-github" class="w-5 h-5" />
						</a>
					</li>
					<li class="mb-1">
						<a
							class="inline-block text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5"
							aria-label="Email"
							href="mailto:matthewtlharvey@gmail.com"
						>
							<Icon name="tabler:mail-forward" class="w-5 h-5" />
						</a>
					</li>
				</ul>
			</div>
			<div class="text-gray-800 dark:text-gray-300 font-medium mb-1">
				<ul class="text-sm py-1 columns-3">
					<li class="mb-1">
						<a
							class="inline-block text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5"
							aria-label="CV"
							href="https://mharvey.netlify.app/MatthewHarvey-CV.pdf" target="_blank"
						>
							<Icon name="tabler:file-info" class="w-5 h-5" />
						</a>
					</li>
					<li class="mb-1">
						<ToggleTheme />
					</li>
				</ul>
			</div>
		</div>
	</div>
</footer>
