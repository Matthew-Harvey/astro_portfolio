---
import { SITE } from '~/config.mjs';
import { getCanonical, getHomePermalink } from '~/utils/permalinks';
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Skills from '~/components/widgets/Skills.astro';
import HighlightedPosts from '~/components/blog/HighlightedPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import MyWork from '~/components/widgets/MyWork.astro';
import Projects from '~/components/widgets/Projects.astro';
import Extras from '~/components/widgets/Extras.astro';

const meta = {
	title: SITE.title,
	description: SITE.description,
	canonical: getCanonical(getHomePermalink()),
};
---

<Layout {meta}>
	<Hero />
	<Skills />
	<MyWork />
	<Projects />
	<Extras />
	<HighlightedPosts />
	<FAQs />
	<Stats />
	<CallToAction />
</Layout>
